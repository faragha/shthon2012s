    <FrameLayout
        android:id="@+id/oekaki_area"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" android:layout_weight="1">
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="30dp" android:background="#00FF00">
    </LinearLayout>

</LinearLayout>