<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >
    <!-- 修飾画像:上のレース -->
    <ImageView
        android:id="@+id/img_lace_top"
        android:src="@drawable/ic_launcher"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    <!-- メインロゴとボタン -->
    <RelativeLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <!-- メインロゴ -->
        <ImageView
            android:id="@+id/img_logo"
            android:src="@drawable/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
        <!-- ボタン：写真を撮ってラクガキ -->
        <Button
            android:id="@+id/btn_take_photo"
            android:background="@drawable/base_btn_bk"
            android:text="@string/main_btn_take_photo"
            android:layout_below="@+id/img_logo"
            android:layout_centerHorizontal="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
        <!-- ボタン：写真を選んでラクガキ -->
        <Button
            android:id="@+id/btn_pick_photo"
            android:background="@drawable/base_btn_bk"
            android:text="@string/main_btn_pick_photo"
            android:layout_below="@+id/btn_take_photo"
            android:layout_centerHorizontal="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
        <!-- ボタン：トモダチのラクガキに参加 -->
        <Button
            android:id="@+id/btn_join"
            android:background="@drawable/base_btn_bk"
            android:text="@string/main_btn_join"
            android:layout_below="@+id/btn_pick_photo"
            android:layout_centerHorizontal="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <!-- 修飾画像:下のレース -->
    <ImageView
        android:src="@drawable/ic_launcher"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
</RelativeLayout>